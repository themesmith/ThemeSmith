{
  "source": {
    "include": [
      "./api/",
      "./core/",
      "./platforms/",
      "./scripts/"
    ],
    "includePattern": "\\.(js|jsx)$",
    "exclude": [
      "node_modules/",
      "output/",
      "tests/",
      "coverage/"
    ]
  },
  "opts": {
    "destination": "./docs/api/",
    "recurse": true,
    "template": "node_modules/docdash"
  },
  "plugins": [
    "plugins/markdown"
  ],
  "templates": {
    "cleverLinks": false,
    "monospaceLinks": false,
    "default": {
      "outputSourceFiles": true
    }
  },
  "markdown": {
    "idInHeadings": true
  }
}
